PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://juber:juber_secret@localhost:5432/juber_db

# Redis
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9094
KAFKA_CLIENT_ID=juber-platform

# Driver Location
DRIVER_PRESENCE_TTL=30
DEFAULT_SEARCH_RADIUS_KM=5
DEFAULT_REGION=bangalore

# Dispatch
DRIVER_RESPONSE_TIMEOUT=15000
MAX_MATCH_ATTEMPTS=5

# Surge Pricing
SURGE_CACHE_TTL=60
SURGE_MIN=1.0
SURGE_MAX=3.0
DEMAND_COUNTER_TTL=300

# Fare Calculation
FARE_BASE=50
FARE_PER_KM=12
FARE_PER_MINUTE=2
CANCELLATION_FEE=50

# Idempotency
IDEMPOTENCY_TTL=86400

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=3000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000
