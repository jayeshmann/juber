{
  "name": "juber-ride-hailing-platform",
  "version": "1.0.0",
  "description": "Multi-region ride-hailing platform with real-time dispatch, surge pricing, and trip management",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "jest",
    "test:integration": "jest --testPathPatterns=integration --runInBand",
    "test:unit": "jest --testPathPatterns=unit",
    "test:coverage": "jest --coverage",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "echo 'No linter configured'"
  },
  "keywords": [
    "ride-hailing",
    "dispatch",
    "surge-pricing",
    "nodejs",
    "express",
    "kafka",
    "redis"
  ],
  "author": "Principal Engineer",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "kafkajs": "^2.2.4",
    "opossum": "^9.0.0",
    "pg": "^8.18.0",
    "prom-client": "^15.1.3",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@testcontainers/kafka": "^11.11.0",
    "@testcontainers/postgresql": "^11.11.0",
    "@testcontainers/redis": "^11.11.0",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "supertest": "^7.2.2",
    "testcontainers": "^11.11.0"
  }
}
